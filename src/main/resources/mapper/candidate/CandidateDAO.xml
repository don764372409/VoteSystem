<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuanmaxinxi.dao.candidate.CandidateDAO">
	<resultMap type="Candidate" id="CandidateResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="img" property="img"/>
		<result column="organize" property="organize"/>
		<result column="describe" property="describe"/>
		<result column="state" property="state"/>
	</resultMap>
	<insert id="insert" parameterType="Candidate">
		insert into t_candidate
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null">
				name,
			</if>
			<if test="img != null">
				img,
			</if>
			<if test="organize != null">
				organize,
			</if>
			<if test="describe != null">
				describe,
			</if>
			<if test="state != null and state!=''">
                state,
            </if>
			</trim>
			<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null">
				#{name},
			</if>
			<if test="img != null">
				#{img},
			</if>
			<if test="organize != null">
				#{organize},
			</if>
			<if test="describe != null">
				#{describe},
			</if>
			<if test="state != null and state!=''">
				#{state},
			</if>
			</trim>
	</insert>
	<update id="update" parameterType="Candidate">
		update t_candidate set name=#{name},img=#{img},organize=#{organize},describe=#{describe},state=#{state} where id=#{id}
	</update>
	<delete id="delete" parameterType="Long">
		delete from t_candidate where id=#{id}
	</delete>
	<select id="selectOneById" parameterType="Long" resultMap="CandidateResultMap">
		select * from t_candidate where id=#{id}
	</select>
	<select id="selectAll" parameterType="Map" resultMap="CandidateResultMap">
		select * from t_candidate
		<if test="name != null and name !=''">
		where name like concat(concat('%',#{name}),'%')
		</if>
	</select>
	<select id="countall" parameterType="Map" resultType="int">
	 	SELECT COUNT(*) FROM t_candidate
	</select>
	
</mapper>