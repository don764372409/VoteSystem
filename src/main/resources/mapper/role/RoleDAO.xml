<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuanmaxinxi.dao.role.RoleDAO">
	<resultMap type="Role" id="RoleResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="deptId" property="deptId"/>
	</resultMap>
	<insert id="insert" parameterType="Role">
		insert into t_role(name,deptId) values(#{name},#{deptId})
	</insert>
	<update id="update" parameterType="Role">
		update t_role set name=#{name},deptId=#{deptId} where id=#{id}
	</update>
	<delete id="delete" parameterType="Long">
		delete from t_role where id=#{id}
	</delete>
	<select id="selectOneById" parameterType="Long" resultMap="RoleResultMap">
		select * from t_role where id=#{id}
	</select>
	<select id="selectAll" resultMap="RoleResultMap">
		select * from t_role
	</select>
</mapper>