<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuanmaxinxi.dao.article.ArticleDAO">
	<resultMap type="Article" id="ArticleResultMap">
		<id column="id" property="id"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="time" property="time"/>
		<result column="aId" property="aId"/>
		<result column="fail" property="fail"/>
		<result column="state" property="state"/>
	</resultMap>
	<insert id="insert" parameterType="Article">
		insert into t_article(title,content,time,aId,fail,state) values(#{title},#{content},#{time},#{aId},#{fail},#{state})
	</insert>
	<update id="update" parameterType="Article">
		update t_article set title=#{title},content=#{content},time=#{time},aId=#{aId},fail=#{fail},state=#{state} where id=#{id}
	</update>
	<delete id="delete" parameterType="Long">
		delete from t_article where id=#{id}
	</delete>
	<select id="selectOneById" parameterType="Long" resultMap="ArticleResultMap">
		select * from t_article where id=#{id}
	</select>
	<select id="selectAll" resultMap="ArticleResultMap">
		select * from t_article
	</select>
</mapper>